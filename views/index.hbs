{{> header}}
<section id="content">
    <ul class="book-list">
        <li v-for="book in books" :data-id="book.id" class="book-item">
            <article>
                <section>
                    <a :href="book.dbid | dblink" class="book_img" rel="nofollow" target="_blank"><img :src="book.img" :alt="book.name"></a>
                </section>
                <section>
                    <div class="book_desc">
                        <h2 class="t_over title"><a :href="book.dbid | dblink" :title="book.name" target="_blank">\{{ book.name }}</a></h2>
                        <p>作者:  \{{ book.author }}</p>
                        <p>出版社: \{{ book.publisher }}</p>
                        <p>页数: \{{ book.pages }}</p>
                        <p>ISBN: \{{ book.ISBN }}</p>
                    </div>
                </section>
                <section>
                    <span class="sp_btn">這本書</span>
                    <span class="sp_btn book_isRead" :data-status="book.isRead">\{{ book.isRead | readstate}}</span>
                    <span v-if="book.isLend == 1" class="sp_btn book_isLend" :data-status="book.isLend">\{{ book.isLend | lendstate}}</span>
                    <a v-else class="control_link" :href="'/lend/' + book.id" :title="book.isLend | lendtitle" :data-status="book.isLend">
                        <span class="sp_btn book_isLend" :data-status="book.isLend">\{{ book.isLend | lendstate}}</span>
                    </a>
                </section>
            </article>
        </li>
    </ul>
</section>